  background-color: #f8f9fa;
  border-bottom: 1px solid #dee2e6;
}

.progress {
  height: 8px;
}

.border {
  border-color: #dee2e6 !important;
}

.rounded {
  border-radius: 0.375rem !important;
}
</style>