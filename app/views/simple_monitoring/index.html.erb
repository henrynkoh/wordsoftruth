<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <h1 class="mb-4">üìä Words of Truth - System Monitoring Dashboard</h1>
    </div>
  </div>

  <!-- Status Cards -->
  <div class="row mb-4">
    <div class="col-md-3 mb-3">
      <div class="card bg-success text-white">
        <div class="card-body">
          <div class="d-flex align-items-center">
            <i class="fas fa-heartbeat fa-2x me-3"></i>
            <div>
              <h6 class="card-title">System Status</h6>
              <h4 class="mb-0">Healthy</h4>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-3 mb-3">
      <div class="card bg-primary text-white">
        <div class="card-body">
          <div class="d-flex align-items-center">
            <i class="fas fa-clock fa-2x me-3"></i>
            <div>
              <h6 class="card-title">Response Time</h6>
              <h4 class="mb-0"><%= @dashboard_data[:performance_metrics][:response_time_p95] %>ms</h4>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-3 mb-3">
      <div class="card bg-warning text-white">
        <div class="card-body">
          <div class="d-flex align-items-center">
            <i class="fas fa-exclamation-triangle fa-2x me-3"></i>
            <div>
              <h6 class="card-title">Error Rate</h6>
              <h4 class="mb-0"><%= @dashboard_data[:performance_metrics][:error_rate] %>%</h4>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-3 mb-3">
      <div class="card bg-info text-white">
        <div class="card-body">
          <div class="d-flex align-items-center">
            <i class="fas fa-users fa-2x me-3"></i>
            <div>
              <h6 class="card-title">Active Users</h6>
              <h4 class="mb-0"><%= @dashboard_data[:system_overview][:active_users] %></h4>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Business Metrics -->
  <div class="row mb-4">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">üìñ Business Accuracy Metrics</h5>
        </div>
        <div class="card-body">
          <div class="mb-3">
            <div class="d-flex justify-content-between">
              <span>Content Extraction Accuracy</span>
              <span class="fw-bold text-success"><%= @dashboard_data[:business_metrics][:sermon_processing_accuracy] %>%</span>
            </div>
            <div class="progress">
              <div class="progress-bar bg-success" style="width: <%= @dashboard_data[:business_metrics][:sermon_processing_accuracy] %>%"></div>
            </div>
          </div>

          <div class="mb-3">
            <div class="d-flex justify-content-between">
              <span>Video Generation Success</span>
              <span class="fw-bold text-primary"><%= @dashboard_data[:business_metrics][:video_generation_success_rate] %>%</span>
            </div>
            <div class="progress">
              <div class="progress-bar bg-primary" style="width: <%= @dashboard_data[:business_metrics][:video_generation_success_rate] %>%"></div>
            </div>
          </div>

          <div class="mb-0">
            <div class="d-flex justify-content-between">
              <span>Content Quality Score</span>
              <span class="fw-bold text-info"><%= @dashboard_data[:business_metrics][:content_quality_score] %>%</span>
            </div>
            <div class="progress">
              <div class="progress-bar bg-info" style="width: <%= @dashboard_data[:business_metrics][:content_quality_score] %>%"></div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">üìà Today's Activity</h5>
        </div>
        <div class="card-body">
          <div class="row text-center">
            <div class="col-6">
              <div class="border-end">
                <h3 class="text-primary"><%= @dashboard_data[:business_metrics][:sermons_processed_today] %></h3>
                <p class="text-muted mb-0">Sermons Processed</p>
              </div>
            </div>
            <div class="col-6">
              <h3 class="text-success"><%= @dashboard_data[:business_metrics][:videos_generated_today] %></h3>
              <p class="text-muted mb-0">Videos Generated</p>
            </div>
          </div>
          <hr>
          <div class="row text-center">
            <div class="col-6">
              <h4 class="text-warning"><%= @dashboard_data[:system_overview][:total_requests_today] %></h4>
              <p class="text-muted mb-0">Total Requests</p>
            </div>
            <div class="col-6">
              <h4 class="text-info"><%= @dashboard_data[:system_overview][:processing_queue_size] %></h4>
              <p class="text-muted mb-0">Queue Size</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- System Performance -->
  <div class="row mb-4">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">üñ•Ô∏è System Performance</h5>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-3">
              <div class="text-center">
                <h6>CPU Usage</h6>
                <div class="progress mb-2" style="height: 20px;">
                  <div class="progress-bar" style="width: <%= @dashboard_data[:performance_metrics][:cpu_usage] %>%">
                    <%= @dashboard_data[:performance_metrics][:cpu_usage] %>%
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-3">
              <div class="text-center">
                <h6>Memory Usage</h6>
                <div class="progress mb-2" style="height: 20px;">
                  <div class="progress-bar bg-warning" style="width: <%= @dashboard_data[:performance_metrics][:memory_usage] %>%">
                    <%= @dashboard_data[:performance_metrics][:memory_usage] %>%
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-3">
              <div class="text-center">
                <h6>Uptime</h6>
                <h4 class="text-success"><%= @dashboard_data[:system_overview][:uptime] %></h4>
              </div>
            </div>
            <div class="col-md-3">
              <div class="text-center">
                <h6>Average Response</h6>
                <h4 class="text-primary"><%= @dashboard_data[:system_overview][:avg_response_time] %>ms</h4>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Real-time Status -->
  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h5 class="mb-0">üîÑ Real-time System Status</h5>
          <button class="btn btn-sm btn-outline-primary" onclick="refreshStatus()">
            <i class="fas fa-sync-alt"></i> Refresh
          </button>
        </div>
        <div class="card-body">
          <div class="row text-center">
            <div class="col-md-3">
              <div class="p-3 border rounded">
                <i class="fas fa-database fa-2x text-success mb-2"></i>
                <h6>Database</h6>
                <span class="badge bg-success">Healthy</span>
                <br><small class="text-muted">15ms response</small>
              </div>
            </div>
            <div class="col-md-3">
              <div class="p-3 border rounded">
                <i class="fas fa-memory fa-2x text-success mb-2"></i>
                <h6>Redis Cache</h6>
                <span class="badge bg-success">Healthy</span>
                <br><small class="text-muted">8ms response</small>
              </div>
            </div>
            <div class="col-md-3">
              <div class="p-3 border rounded">
                <i class="fas fa-cogs fa-2x text-success mb-2"></i>
                <h6>Background Jobs</h6>
                <span class="badge bg-success">Processing</span>
                <br><small class="text-muted">0 failed</small>
              </div>
            </div>
            <div class="col-md-3">
              <div class="p-3 border rounded">
                <i class="fas fa-cloud fa-2x text-success mb-2"></i>
                <h6>External APIs</h6>
                <span class="badge bg-success">Available</span>
                <br><small class="text-muted">All services</small>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-12">
      <div class="alert alert-info">
        <h6><i class="fas fa-info-circle"></i> Monitoring Features</h6>
        <p class="mb-2">This dashboard provides real-time monitoring of:</p>
        <ul class="mb-0">
          <li><strong>Business Accuracy:</strong> Content extraction, theological validation, and video generation success rates</li>
          <li><strong>System Performance:</strong> Response times, error rates, and resource utilization</li>
          <li><strong>Service Health:</strong> Database, cache, background jobs, and external service status</li>
          <li><strong>Activity Tracking:</strong> Daily sermon processing and video generation metrics</li>
        </ul>
      </div>
    </div>
  </div>
</div>

<script>
function refreshStatus() {
  fetch('/monitoring/status')
    .then(response => response.json())
    .then(data => {
      console.log('Status updated:', data);
      // Update UI with new status data
    })
    .catch(error => console.error('Error refreshing status:', error));
}

// Auto-refresh every 30 seconds
setInterval(refreshStatus, 30000);
</script>

