<script>
function addSampleUrl(element) {
  const textarea = document.getElementById('sermon_urls');
  const currentValue = textarea.value;
  const newUrl = element.textContent;
  
  if (currentValue.trim() === '') {
    textarea.value = newUrl;
  } else {
    textarea.value = currentValue + '\n' + newUrl;
  }
  
  // Visual feedback
  element.style.backgroundColor = '#28a745';
  element.style.color = 'white';
  setTimeout(() => {
    element.style.backgroundColor = '';
    element.style.color = '';
  }, 1000);
  
  textarea.focus();
}

// Auto-resize textarea
document.addEventListener('DOMContentLoaded', function() {
  const textarea = document.querySelector('.url-textarea');
  if (textarea) {
    textarea.addEventListener('input', function() {
      this.style.height = 'auto';
      this.style.height = this.scrollHeight + 'px';
    });
  }
});

// URL validation
function validateUrls() {
  const textarea = document.getElementById('sermon_urls');
  const urls = textarea.value.split('\n').filter(url => url.trim() !== '');
  
  const invalidUrls = urls.filter(url => {
    try {
      new URL(url.trim());
      return false;
    } catch {
      return true;
    }
  });
  
  if (invalidUrls.length > 0) {
    alert(`다음 URL들이 유효하지 않습니다:\n${invalidUrls.join('\n')}`);
    return false;
  }
  
  if (urls.length === 0) {
    alert('최소 하나의 URL을 입력해주세요.');
    return false;
  }
  
  if (urls.length > 20) {
    alert('한 번에 최대 20개의 URL만 처리할 수 있습니다.');
    return false;
  }
  
  return true;
}

// Add validation to form
document.querySelector('.automation-form').addEventListener('submit', function(e) {
  if (!validateUrls()) {
    e.preventDefault();
  }
});
</script>

